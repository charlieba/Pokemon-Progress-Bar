{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES5",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "resolveJsonModule": true,
    },
    "include": ["src"]
}